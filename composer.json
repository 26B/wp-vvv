{
  "name": "WP-Seed/wp-seed",
  "description": "WordPress VVV 2 project boilerplate.",
  "authors": [
    {
      "name": "Pedro Duarte",
      "email": "xipasduarte@gmail.com"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "composer-plugin-api": "^1.1",
    "goblindegook/syllables": "~0.3",
    "johnpbloch/wordpress": "@stable",
    "wpackagist-plugin/akismet": "~3.1",
    "wpackagist-plugin/disable-emojis": "~1.5",
    "wpackagist-plugin/disable-xml-rpc": "~1.0",
    "wpackagist-plugin/force-regenerate-thumbnails": "~2.0"
  },
  "require-dev": {
    "rarst/laps": "~1.2",
    "wp-sync-db/wp-sync-db": "dev-master",
    "wp-sync-db/wp-sync-db-media-files": "dev-master",
    "wpackagist-plugin/redis-cache": "^1.3",
    "wpackagist-plugin/wp-hydra": "~1.1",
    "wpackagist-plugin/wordpress-importer": "^0.6.3"
  },
  "extra": {
    "installer-paths": {
      "vendor/{$vendor}/{$name}/": ["goblindegook/syllables"],
      "content/mu-plugins/{$name}/": [
        "wpackagist-plugin/disable-emojis",
        "wpackagist-plugin/disable-xml-rpc"
      ],
      "content/plugins/{$name}/": ["type:wordpress-plugin"],
      "content/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "core"
  },
  "config": {
    "sort-packages": true
  }
}
