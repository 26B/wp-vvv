{
  "name": "WP-Seed/wp-seed",
  "description": "WordPress VVV 2 project boilerplate.",
  "authors": [
    {
      "name": "Pedro Duarte",
      "email": "xipasduarte@gmail.com"
    },
    {
      "name": "SÃ©rgio Santos",
      "email": "me@s3rgiosan.com"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "composer-plugin-api": "^1.1",
    "goblindegook/syllables": "^0.3",
    "johnpbloch/wordpress": "@stable",
    "wpackagist-plugin/akismet": "^3.1",
    "wpackagist-plugin/disable-emojis": "^1.7",
    "wpackagist-plugin/disable-xml-rpc": "^1.0",
    "wpackagist-plugin/regenerate-thumbnails": "^2.3"
  },
  "require-dev": {
    "wpackagist-plugin/debug-bar": "^0.9",
    "wpackagist-plugin/debug-bar-actions-and-filters-addon": "^1.5",
    "wpackagist-plugin/debug-bar-list-dependencies": "^1.1",
    "wpackagist-plugin/debug-bar-post-types": "^1.3",
    "wpackagist-plugin/p3-profiler": "^1.5",
    "wpackagist-plugin/query-monitor": "^2.13",
    "wpackagist-plugin/user-switching": "^1.0",
    "wpackagist-plugin/wp-hydra": "^1.1"
  },
  "extra": {
    "installer-paths": {
      "vendor/{$vendor}/{$name}/": ["goblindegook/syllables"],
      "wp-content/mu-plugins/{$name}/": [
        "wpackagist-plugin/disable-emojis",
        "wpackagist-plugin/disable-xml-rpc"
      ],
      "wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
      "wp-content/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "wordpress"
  },
  "config": {
    "sort-packages": true
  }
}
